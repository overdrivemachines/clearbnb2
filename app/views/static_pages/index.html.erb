<h1>StaticPages#index</h1>
<p>Find me in app/views/static_pages/index.html.erb</p>

<% if current_user %>
  <h2><%= current_user.email %></h2>
  <%= image_tag(current_user.avatar_url) if !current_user.avatar_url.nil? %>
  <%= link_to "Edit Account", edit_user_registration_path %>
  <%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, method: :delete %>
  <%= link_to "New Listing", new_host_listing_path %>
<% else %>
  <%= link_to "Login", new_user_session_path %>
  <%= link_to "Create Account", new_user_registration_path %>
<% end %>
